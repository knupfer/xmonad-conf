-- -*- mode: haskell -*-

Config
  { font     = "-unknown-DejaVu Sans Mono-normal-normal-normal-*-*-*-*-*-m-0-iso10646-1-unknown-DejaVu Sans Mono-normal-normal-normal-*-*-*-*-*-m-0-iso10646-1"
  , bgColor  = "black"
  , fgColor  = "grey"
  , position = Top
  , commands =
    [ Run Cpu
      [ "-L"       , "25"
      , "-H"       , "50"
      , "--low"    , "#009900"
      , "--normal" , "#cccc00"
      , "--high"   , "#ff0000"
      , "-t"       , "<bar>"
      , "-b"       , "·"
      , "-f"       , "·"
      , "-W"       , "25"
      ] 1
    , Run Memory ["-t" , "Mem: <usedratio>%"] 30
    , Run Date "%a %_d %b %H:%M" "date" 600
    , Run Battery
      [ "--template" , "<acstatus>"
      , "--Low"      , "20" -- units: %
      , "--High"     , "80" -- units: %
      , "--low"      , "#ff5050"
      , "--normal"   , "#ddaa50"
      , "--high"     , "#50aaff"
      , "--"
      , "-o"         , "<left>% <fc=#777777>(<timeleft>)</fc>" -- discharging
      , "-i"         , "<left>%" -- charged
      ] 40
    , Run Com "/home/knupfer/.xmonad/volume.sh" [] "vol" 20
    , Run StdinReader
    ]
  , sepChar  = "%"
  , alignSep = "}{"
  , template = " <fc=#222222>%cpu%</fc> | %memory% | %StdinReader% }{%vol% | %battery% | <fc=#ee9a00>%date%</fc> "
  }
