-- -*- mode: haskell -*-
Config
  { font     = "-*-*-*-*-*-*-*-*-*-*-*-*-*-*"
  , bgColor  = "black"
  , fgColor  = "grey"
  , position = Top
  , commands =
    [ Run Cpu
      [ "-L"       , "33"
      , "-H"       , "66"
      , "--low"    , "#009900"
      , "--normal" , "#bbbb00"
      , "--high"   , "#ee0000"
      , "-t"       , "<bar>"
      , "-b"       , "Â·"
      , "-f"       , "|"
      , "-W"       , "6"
      ] 5
    , Run Memory ["-t" , "Mem: <usedratio>%"] 50
    , Run Date "%a %_d %b %H:%M" "date" 600
    , Run Battery
      [ "--template" , "<acstatus>"
      , "--Low"      , "20" -- units: %
      , "--High"     , "80" -- units: %
      , "--low"      , "#ff5050"
      , "--normal"   , "#ddaa50"
      , "--high"     , "#50aaff"
      , "--" -- battery specific options
        -- discharging status
      , "-o" , "<left>% <fc=#777777>(<timeleft>)</fc>"
        -- charged status
      , "-i" , "<left>%"
      ] 50
      , Run Com "/home/quxbar/.xmonad/volume.sh" [] "vol" 5
    , Run StdinReader
    ]
  , sepChar  = "%"
  , alignSep = "}{"
  , template = " <fc=#777777>[%cpu%]</fc> | %memory% | %StdinReader% }{%vol% | %battery% | <fc=#ee9a00>%date%</fc> "}
