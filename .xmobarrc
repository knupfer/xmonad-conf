-- -*- mode: haskell -*-
Config
  { font     = "-*-*-*-*-*-*-*-*-*-*-*-*-*-*"
  , bgColor  = "black"
  , fgColor  = "grey"
  , position = Top
  , commands =
    [ Run Cpu
      [ "-L"       , "33"
      , "-H"       , "66"
      , "--low"    , "#009900"
      , "--normal" , "#bbbb00"
      , "--high"   , "#ee0000"
      , "-t"       , "<bar>"
      , "-b"       , "Â·"
      , "-f"       , "|"
      , "-W"       , "6"
      ] 5
    , Run Memory ["-t" , "Mem: <usedratio>%"] 50
    , Run Com "cat"
      ["/sys/class/power_supply/manta-battery/capacity"] "bat" 100
    , Run Date "%a %_d %b %H:%M" "date" 600
    , Run StdinReader]
  , sepChar  = "%"
  , alignSep = "}{"
  , template = " <fc=#777777>[%cpu%]</fc> | %memory% | %StdinReader% }{ <fc=#50aaff>%bat%</fc> | <fc=#ee9a00>%date%</fc> "}
